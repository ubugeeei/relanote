{
  "comments": {
    "lineComment": "--"
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["|", "|"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "<", "close": ">" }
  ],
  "surroundingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "<", "close": ">" },
    { "open": "|", "close": "|" }
  ],
  "folding": {
    "markers": {
      "start": "^\\s*(section|layer|let)\\b",
      "end": "^\\s*$"
    }
  },
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(let|section|layer|if|match)\\b.*$",
    "decreaseIndentPattern": "^\\s*(in|else|with)\\b.*$"
  },
  "wordPattern": "[a-zA-Z_][a-zA-Z0-9_]*|[PMmAd][1-9][0-9]*[+-]*|<[0-9]+>"
}
